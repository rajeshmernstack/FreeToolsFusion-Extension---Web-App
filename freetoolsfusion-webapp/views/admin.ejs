<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet"
    />
    <!-- MDB -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.1/mdb.min.css"
      rel="stylesheet"
    />

    <style>
      .list-group {
        padding-left: 20px;
        padding-right: 30px;
        margin-bottom: 0;
      }
      .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      }

      .table th,
      .table td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }

      .table th {
        background-color: #f2f2f2;
      }

      .table tr:hover {
        background-color: #f5f5f5;
      }

      .column-id {
        width: 10%;
      }

      .column-name {
        width: 60%;
      }
      .column-use {
        width: 30%;
      }

      .use-btn {
        background-color: #dc3545;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        padding: 8px 16px;
        transition: background-color 0.2s ease;
      }

      .use-btn:hover {
        background-color: #c82333;
      }

      .list-header {
        display: flex;
        justify-content: space-between;
        background-color: #f2f2f2;
        padding: 10px 10px 10px 10px;
        font-weight: bold;
        border-radius: 4px 4px 0 0;
      }

      .list-header span {
        flex: 1;
        text-align: center;
      }

      .list-header span:not(:last-child) {
        border-right: 1px solid #ddd;
        padding-right: 10px;
      }

      .list-container {
        margin-top: 0px;
      }
    </style>

    <title>Admin</title>
  </head>
  <body>
    <!-- MDB -->

    <div class="container">
      <div class="row">
        <!-- Tabs navs -->
        <ul class="nav nav-tabs nav-fill mb-3" id="ex1" role="tablist">
          <li class="nav-item" role="presentation">
            <a
              class="nav-link active"
              id="ex1-tab-1"
              data-mdb-toggle="tab"
              href="#ex1-tabs-1"
              role="tab"
              aria-controls="ex1-tabs-1"
              aria-selected="true"
              >All Cookies</a
            >
          </li>
          <li class="nav-item" role="presentation">
            <a
              class="nav-link"
              id="ex1-tab-2"
              data-mdb-toggle="tab"
              href="#ex1-tabs-2"
              role="tab"
              aria-controls="ex1-tabs-2"
              aria-selected="false"
              >Add New Cookie</a
            >
          </li>
        </ul>
        <!-- Tabs navs -->

        <!-- Tabs content -->
        <div class="tab-content" id="ex1-content">
          <div
            class="tab-pane fade show active"
            id="ex1-tabs-1"
            role="tabpanel"
            aria-labelledby="ex1-tab-1"
          >
            <div class="list-container">
              <div class="list-header">
                <div class="column column-id">No</div>
                <div class="column column-name">Name</div>
                <div class="column column-use">Actions</div>
              </div>
              <ul class="list-group list-group-light" id="app-list">
                <!-- Your list items here -->
              </ul>
            </div>
            <br />
          </div>
          <div
            class="tab-pane fade"
            id="ex1-tabs-2"
            role="tabpanel"
            aria-labelledby="ex1-tab-2"
          >
            <form id="add_new_app_form">
              <!-- Name input -->
              <div class="form-outline mb-4">
                <input type="text" id="form4Example1" class="form-control" name="app_name" />
                <label class="form-label" for="form4Example1">App Name</label>
              </div>
              <div class="form-outline mb-4">
                <input type="text" id="form4Example1" class="form-control" name="app_url" />
                <label class="form-label" for="form4Example1">App Url </label>
              </div>

              <!-- Email input -->

              <!-- Message input -->
              <div class="form-outline mb-4">
                <textarea
                  class="form-control"
                  id="form4Example3"
                  rows="12"
                  name="app_cookies"
                ></textarea>
                <label class="form-label" for="form4Example3">Cookies</label>
              </div>

              <div class="mb-4">
                <label class="form-label" for="customFile"
                  >32x32 Icon for App</label
                >
                <input type="file" class="form-control" id="customFile" name="app_icon" />
              </div>

              <!-- Submit button -->
              <button type="submit" class="btn btn-primary btn-block mb-4">
                Submit
              </button>
            </form>
          </div>
        </div>
        <!-- Tabs content -->
      </div>
    </div>

    
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.1/mdb.min.js"
    ></script>

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"
      integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script src="main.js"></script>

    
  </body>
</html>
